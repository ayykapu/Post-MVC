@model Post

<h1>Dodaj post</h1>
<form asp-action="Create" asp-controller="Post" method="post">

    <div class="mb-3">
        <label asp-for="Content">Zawartość</label>
        <input class="form-control" asp-for="Content" />
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Author">Autor wpisu</label>
        <input class="form-control" asp-for="Author" />
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date">Data publikacji</label>
        <input asp-for="Date" class="form-control" type="text" readonly value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comment">Komentarz</label>
        <textarea class="form-control" asp-for="Comment"></textarea>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Tags">Tagi</label>
        <select class="form-control" asp-for="Tags" asp-items="@Html.GetEnumSelectList<Tags>()"></select>
        <span class="text-danger" asp-validation-for="Tags"></span>
    </div>

    <div class="form-group">
        <select class="form-control" asp-for="OrganizationId" asp-items="@Model.Organizations"></select>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn-primary">Utwórz</button>
    </div>

</form>